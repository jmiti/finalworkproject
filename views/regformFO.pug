doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(href='/css/style.css' rel='stylesheet')
  title Register FO
.col-md-12
  // As a heading
  nav.navbar.navbar-dark.bg-dark
    .container-fluid
      span.navbar-brand.mb-0.h1 Agricultural Officer
.container(style='margin-left: -10px;')
  .row
    .col-md-2
      .d-flex.flex-column.flex-shrink-0.p-3.bg-light(style='width: 280px; height: 700px; background: transparent;')
        a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.link-dark.text-decoration-none(href='/')
          svg.bi.me-2(width='40' height='32')
            use(xlink:href='#bootstrap')
          // <span class="fs-4"></span>
          img(src='/images/istockphoto-1369012070-170667a.jpg' style='height: 60px;')
          span UFARM
        hr
        ul.nav.nav-pills.flex-column.mb-auto
          li.nav-item
            a.nav-link.link-dark(href='/Agricofficer/RegformFO.html' aria-current='page')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#home')
              |                   Home
          li
            a.nav-link.active(href='/Agricofficer/updatedactivities.html')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#speedometer2')
              |                   Register farmer One
          li
            a.nav-link.link-dark(href='#')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#table')
              |                   Appoint Farmer One
          li
            a.nav-link.link-dark(href='#')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#grid')
              |                   Products
          li
            a.nav-link.link-dark(href='#')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#people-circle')
              |                   Customers
        hr
        .dropdown
          a#dropdownUser2.d-flex.align-items-center.link-dark.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
            img.rounded-circle.me-2(src='/images/istockphoto-1033669508-170667a.jpg' alt='' width='32' height='32')
            strong mdo
          ul.dropdown-menu.text-small.shadow(aria-labelledby='dropdownUser2')
            li
              a.dropdown-item(href='#') New project...
            li
              a.dropdown-item(href='#') Settings
            li
              a.dropdown-item(href='#') Profile
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='/landingpage.html') Sign out
    .col-md-10
      .container-fluid.form-style(style='margin-left: 130px;')
        // <div class="logo-div"><img class="user-logo mb-2" src="../images/logo.png" alt="Ufarm logo" /></div>
        form#registerFO.form(action='regformFO' name='registration' method='POST' onsubmit='return Validate4()')
          h5.text-muted.text-center Add FarmerOne Details
          hr
          .row
            .col
              .form-field
                label(for='firstname')
                  | First Name:
                  small.asterisk  *
                input#firstname(type='text' name='firstname' autocomplete='off')
                .error
            .col
              .form-field
                label(for='lastname')
                  | Last Name:
                  small.asterisk  *
                input#lastname(type='text' name='lastname' autocomplete='off')
                .error
            .col
              .form-field
                label(for='uniquenumber')
                  | Unique Number:
                  small.asterisk  *
                input#uniquename.text-muted(type='text' name='uniquenumber' autocomplete='off' value='forexample MW1-001')
                .error
            .col
              .form-field
                label(for='password')
                  | Password:
                  small.asterisk  *
                input#password.text-muted(type='password' name='password' autocomplete='off')
                .error
          .row
            .col
              .form-field
                label(for='role') Role
                select#role(name='role')
                  option Assign a role to this farmerOne
                  option farmerOne
                .error
            .col
              .form-field
                label(for='ninnumber')
                  | NIN Number:
                  small.asterisk  *
                input#ninnumber(type='text' name='ninnumber' autocomplete='off')
                .error
            .col
              .form-field
                label(for='phonenumber')
                  | Phone Number:
                  small.asterisk  *
                input#phonenumber(type='text' name='phonenumber' autocomplete='off')
                .error
            .col
              .form-field
                label(for='residenttype') Resident Type:
                select#residenttype(name='residenttype')
                  option Select Resident Type
                  option Permanent
                  option Temporary
                .error
          .row
            .col
              .form-field
                label(for='periodofstay')
                  | Period of Stay:
                  small.asterisk  *
                input#phonenumber(type='number' name='periodofstay' autocomplete='off')
                .error
            .col
              .form-field
                label(for='regdate')
                  | Date of Registration:
                  small.asterisk  *
                input#regdate(type='date' name='regdate' autocomplete='off')
                .error
            .col
              .form-field
                label(for='birthdate')
                  | Date of Birth
                  small.asterisk  *
                input#birthdate(type='date' name='dob' autocomplete='off')
                .error
            .col
              .form-field
                label#gender(for='gender') Gender:
                .radio
                  input#gender1(type='radio' name='gender' value='female' autocomplete='off' checked='')
                  span Female
                  input#gender2(type='radio' name='gender' value='male' autocomplete='off')
                  span Male
                  input#gender3(type='radio' name='gender' value='others' autocomplete='off')
                  span Others
                .error
          hr.mt-1
          p.text-muted Add FarmerOne Direction Coordinates
          .row
            .col
              .form-field
                label(for='ward') Ward:
                select#ward(name='ward')
                  option Appoint a ward to this farmerOne
                  option Ward 1
                  option Ward 2
                  option Ward 3
                  option Ward 4
                .error
            .col.column-stretch-left
              .form-field
                label(for='streetname')
                  | Street Name:
                  small.asterisk  *
                input#streetname(type='text' name='streetname' autocomplete='off')
                .error
            .col
              .form-field
                label(for='housenumber')
                  | House Number:
                  small.asterisk  *
                input#housenumber(type='text' name='housenumber' autocomplete='off')
                .error
            .col
              .form-field
                label(for='gender') Activities:
                .activity
                  input#register.checkbox-size(type='checkbox' name='activity' autocomplete='off' value='inspects' checked='')
                  span.check-box-tex Inspect
                  input#inspect.checkbox-size(type='checkbox' name='activity' autocomplete='off' value='approves')
                  span.check-box-tex Approve
                  input#approve.checkbox-size(type='checkbox' name='activity' autocomplete='off' value='register')
                  span.check-box-tex  Register
          .container.FO-form-btn
            .button1
              button.btn.btn-primary.mt-1.form-add-btn.mr-auto(type='submit') Add New
            //
              <div class="button1">
              <button class="btn btn-primary mt-1 ml-4 form-clear-btn mr-auto" type="" style="width: 120px">Clear</button>
              </div>
